<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column">
                <h1 class=" panel has-text-centered">Create</h1>
                <h1 class=" panel has-text-centered">Créer un utilisateur</h1>
                <form class="panel" action="/inside" method="POST" enctype="multipart/form-data">
                    <div class="field">
                        <label class="label">Username</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input" type="text" placeholder="Name" name="username">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">Email</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input " type="email" placeholder="Email" name="email">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                        </div>
                    </div>
                    <div class="file">
                        <label class="file-label">
                            <input class="file-input" type="file" name="picture">
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Choisir une image de profil
                                </span>
                            </span>
                        </label>
                    </div>
                    <div class="field">
                        <label class="label">Password</label>
                        <div class="control">
                            <input class="input" type="Password" placeholder="Password" name="password">
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">confirmer le password</label>
                        <div class="control">
                            <input class="input" type="Password" placeholder="Password" name="confpassword">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label class="checkbox">
                                <input type="checkbox" name="checkbox">
                                I agree to the terms and conditions
                            </label>
                        </div>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button type="submit" class="button is-link">Enregistrer</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="column ">
                <h1 class=" panel has-text-centered">Read</h1>
                <h1 class=" panel has-text-centered">Liste des utilisateurs</h1>
                {{#each dbuser}}
                <div class="columns panel">
                    <div class=" column ">
                        <figure class="image is-64x64">
                            <img class="is-rounded" src="{{ this.image }}" alt="image de profil">
                        </figure>
                    </div>
                    <div class="column is-three-quarters is-size-7">
                        <p>nom : {{ this.name }}</p>
                        <p>mail : {{ this.email }}</p>
                        <p>inscription : {{ moment this.createDate format="DD/MM/YY" }}</p>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="column">
                <h1 class=" panel has-text-centered">Update</h1>
                <h1 class=" panel has-text-centered">Modifier un utilisateur</h1>
                {{#each dbuser}}
                <form class="panel" action="/inside/{{ _id }}/?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="columns ">
                        <div class=" column">
                            <figure class="image is-64x64">
                            <img class="is-rounded" src="{{ this.image }}" alt="image de profil">
                        </figure>
                        
                        </div>
                        <div class="column is-three-quarters">
                            <input class="input" name="username" value="{{this.name}}"></input>
                            <input class="input" name="email" value="{{this.email}}"></input>
                        </div>
                    </div>
                    <div class="column file">
                        <label class="file-label">
                            <input class="file-input" type="file" name="picture">
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Choisir une image de profil
                                </span>
                            </span>
                        </label>
                    </div>
                    <div class=" column control">
                        <button type="submit" class="button is-link">Modifier</button>
                    </div>
                </form>
                {{/each}}
            </div>
            <div class="column">
                <h1 class=" panel has-text-centered">Delete</h1>
                <h1 class=" panel has-text-centered">Effacer un utilisateur</h1>
                {{#each dbuser}}
                <form class="panel" action="/inside/{{ _id }}/?_method=DELETE" method="POST">
                    <div class="columns ">
                        <div class=" column ">
                            <figure class="image is-64x64">
                            <img class="is-rounded" src="{{ this.image }}" alt="image de profil">
                        </figure>
                        </div>
                        <div class="column is-three-quarters ">
                            <p name="username"></p> {{this.name}}</p>
                            <p name="email"></p> {{this.email}}</p>
                        </div>
                    </div>
                    <div class="control">
                        <button type="submit" class="button is-link">Effacer</button>
                    </div>
                </form>
                {{/each}}
                <form class="panel" action="/inside/?_method=DELETE" method="POST">
                    <div class="control">
                        <button type="submit" class="button is-link">Vider la base de donnée</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>